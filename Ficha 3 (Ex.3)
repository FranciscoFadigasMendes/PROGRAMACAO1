#include <stdio.h>
#include <stdlib.h>

int main()
{
    float num;
    printf("Introduza o montante total de compras efetuadas:");
    scanf("%f",&num);
    printf("\n");

    if(num<500)
    printf("%% de desconto = 0%%");
    else
        if(num<1250)
        printf("%% de desconto = 4%%");
        else
            if(num<2000)
            printf("%% de desconto = 6%%");
            else
                if(num>=2000)
                printf("%% de desconto = 8%%");
    printf("\n");
    return 0;
}
