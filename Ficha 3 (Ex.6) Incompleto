#include <stdio.h>
#include <stdlib.h>

int main()
{
    char ordem,c,d;
    int num1,num2,num3;

    printf("Digite 3 numeros:\n");
    printf("\nNumero 1:\n");
    fflush(stdin);
    scanf("%d",&num1);
    printf("Numero 2:\n");
    fflush(stdin);
    scanf("%d",&num2);
    printf("Numero 3:\n");
    fflush(stdin);
    scanf("%d",&num3);
    printf("Pretende mostra-los por ordem crescente ou decrescente?");
    printf("\nPara crescente digite 'c', para decrescente digite 'd':\n\n\n");
    fflush(stdin);
    scanf("%c",&ordem);

    switch(ordem){
        case 'c':
                if(num1>num2>num3)
                    printf("%d\n,%d\n,%d\n\n\n\n\n",num1,num2,num3);
                else
                    if(num1>num3>num2)
                    printf("%d\n,%d\n,%d\n\n\n\n\n",num1,num3,num2);
                    else
                        if(num2>num1>num3)
                        printf("%d\n,%d\n,%d\n\n\n\n\n",num2,num1,num3);
                        else
                            if(num2>num3>num1)
                            printf("%d\n,%d\n,%d\n\n\n\n\n",num2,num3,num1);
                            else
                                if(num3>num2>num1)
                                printf("%d\n,%d\n,%d\n\n\n\n\n",num3,num2,num1);
                                else
                                    if(num3>num1>num2)
                                    printf("%d\n,%d\n,%d\n\n\n\n\n",num3,num1,num2);


            break;

        case 'd':
            if(num1>num2>num3)
                    printf("%d\n,%d\n,%d\n\n\n\n\n",num3,num2,num1);
                else
                    if(num1>num3>num2)
                    printf("%d\n,%d\n,%d\n\n\n\n\n",num2,num3,num1);
                    else
                        if(num2>num1>num3)
                        printf("%d\n,%d\n,%d\n\n\n\n\n",num3,num1,num2);
                        else
                            if(num2>num3>num1)
                            printf("%d\n,%d\n,%d\n\n\n\n\n",num1,num3,num2);
                            else
                                if(num3>num2>num1)
                                printf("%d\n,%d\n,%d\n\n\n\n\n",num1,num2,num3);
                                else
                                    if(num3>num1>num2)
                                    printf("%d\n,%d\n,%d\n\n\n\n\n\n",num2,num1,num3);
            break;

        default:
            printf("ERRO\n\n\n\n\n\n\n");
    }
    return 0;
}
