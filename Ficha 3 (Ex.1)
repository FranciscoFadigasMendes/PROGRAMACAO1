
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num;

    printf("Digite um numero inteiro:");
    scanf("%d",&num);
    printf("\n");
        if(num==0)
        printf("Numero = 0 \n\n");
        else
            if(num>0)
                if(num%2==0)
                printf("Numero e maior que 0 e par\n\n");
                else
                printf("Numero e maior que 0 e impar\n\n");
            else
                if(num<0)
                    if(num%2==0)
                        printf("Numero e menor que 0 e par");
                    else
                        printf("Numero menor que 0 e impar");


    return 0;
}
