
#include <stdio.h>
#include <stdlib.h>

int l1,l2,area,perimetro;
int calc_area(int l1, int l2);
int pm(int l1, int l2);

/*------------------Funcao Main-----------------------------------*/

int main()
{
printf("Digite o valor de 2 lados diferentes do retangulo:\n");
printf("Lado 1: ");
scanf("%d",&l1);
printf("Lado 2: ");
scanf("%d",&l2);
printf("\n\n");

/*Enunciar a função area*/
area = calc_area(l1,l2);
printf("Area = %d \n",area);

/*Enunciar a função perimetro*/
perimetro = pm(l1,l2);
printf("Perimetro = %d \n",perimetro);

    return 0;
}


/*-------------Funcões Secundarias----------------------------------*/



/*Função ler_num e calc_area numa só*/
int calc_area(int l1,int l2)
{
     if(l1>0 && l2>0){
        l1==l1;
        l2==l2;}
        else
        if(l1>0 && l2<0){
        l1==l1;
        l2==(l2*(-1));}
        else
            if(l1<0 && l2>0){
            l1==(l1*(-1));
            l2==l2;}
            else
                if(l1<0 && l2<0){
                l1==(l1*(-1));
                l2==(l2*(-1));}
        int calc_area;
        calc_area= l1 * l2;

            return calc_area;
}


/*Função Perímetro*/
int pm(int l1,int l2)
{
      if(l1>0 && l2>0){
        l1==l1;
        l2==l2;}
        else
        if(l1>0 && l2<0){
        l1==l1;
        l2==(l2*(-1));}
        else
            if(l1<0 && l2>0){
            l1==(l1*(-1));
            l2==l2;}
            else
                if(l1<0 && l2<0){
                l1==(l1*(-1));
                l2==(l2*(-1));}
        int pm;
        pm = ((2*l1)+ (2*l2));

        return pm;
}
