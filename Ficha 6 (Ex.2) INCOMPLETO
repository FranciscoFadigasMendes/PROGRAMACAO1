/*---------------------------------------*/
void maiusculas(char string_de_teste[31],int nconv)
{
    int i;

    printf("Escreva a palavra para meter vogais maiusculas: ");
    fflush(stdin);
    gets(string_de_teste);

        for(i=0;i<31;i++){
            if(string_de_teste[i]=='a'||string_de_teste[i]=='e'||string_de_teste[i]=='i'||string_de_teste[i]=='o'||string_de_teste[i]=='u'){
                string_de_teste[i]=toupper(string_de_teste[i]);
                nconv++;}

        }
            printf("\nO resultado com as vogais convertidas e: ");
            puts(string_de_teste);
            printf("\nO numero de conversoes foram: %d",nconv);
}
/*---------------------------------------*/
