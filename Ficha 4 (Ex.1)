
#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num,resposta;
    char terminar;

    do{
        printf("Digite um numero inteiro:");
        scanf("%d",&num);
        printf("\n");

        if(num==0)
            printf("Numero = 0 \n\n");
            else
                if(num>0)
                    if(num%2==0)
                    printf("Numero e maior que 0 e par\n\n");
                    else
                    printf("Numero e maior que 0 e impar\n\n");
                else
                    if(num<0)
                        if(num%2==0)
                            printf("Numero e menor que 0 e par\n\n");
                        else
                            printf("Numero menor que 0 e impar\n\n");

        printf("Deseja continuar? Sim-1  Nao-0\n\n");
        scanf("%d",&resposta);


    }
    while(resposta==1 && resposta!=0);

